<Boton@MDIconButton>:
    theme_icon_color: "Custom"
    icon_color: 1,1,1,1
    md_bg_color:'#252440'

MDBoxLayout:
    MDBoxLayout:
        orientation:'vertical'
        padding:15
        size_hint_x:.7
        MDCard:
            elevation:2
            size_hint:1,.15
            md_bg_color:225/255, 227/255, 225/255, 1
            TextInput:
                size_hint:1,1
                background_color:0,0,0,0
                multiline:False
                halign:'center'
                font_size:sp(20)
                valign:'center'
                readonly:True
                disabled:True
                id:operation
        MDBoxLayout:
            spacing:20
            size_hint_y:.2
            MDFloatLayout:
            Boton:
                text:'A'
                icon:'alpha-a'
                on_release:operation.text=operation.text+' '+self.text
            Boton:
                text:'B'
                icon:'alpha-b'
                on_release:operation.text=operation.text+' '+self.text
            Boton:
                text:'C'
                icon:'alpha-c'
                on_release:operation.text=operation.text+' '+self.text
            MDFloatLayout:
        MDBoxLayout:
            spacing:20
            size_hint_y:.2
            MDFloatLayout:
            Boton:
                text:'u'
                icon:'set-all'
                on_release:operation.text=operation.text+' '+self.text
            Boton:
                text:'n'
                icon:'set-center'
                on_release:operation.text=operation.text+' '+self.text
            Boton:
                text:'-'
                icon:'minus'
                on_release:operation.text=operation.text+' '+self.text
            MDFloatLayout:
        MDBoxLayout:
            spacing:20
            size_hint_y:.2
            MDFloatLayout:
            Boton:
                text:'Î”'
                icon:'triangle'
                on_release:operation.text=operation.text+' '+self.text
            Boton:
                icon:'delete'
                md_bg_color:122/255, 0, 0, 1
                theme_icon_color: "Custom"
                icon_color: 1,1,1,1
                on_release:app.delete()
            Boton:
                icon:'calculator-variant'
                md_bg_color:0, 159/255, 0, 1
                on_release:app.calculate()
            MDFloatLayout:
    MDFloatLayout:
        MDCard:
            size_hint:.9,.9
            pos_hint:{'right':.95,'center_y':.5}
            elevation:2
            md_bg_color:225/255, 227/255, 225/255, 1
            MDBoxLayout:
                padding:10
                spacing:10
                orientation:'vertical'
                MDLabel:
                    text:'Resultado:'
                    halign:'center'
                    size_hint_y:.05
                    theme_text_color: "Custom"
                    text_color: 0,0,0,.5
                    font_size:sp(20)
                Image:
                    id:resultado
